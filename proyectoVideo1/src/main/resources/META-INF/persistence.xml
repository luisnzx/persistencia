<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    
    <persistence-unit name="ObjectDB_Unit">
        <provider>com.objectdb.jpa.Provider</provider>
        <properties>
            <property name="javax.persistence.jdbc.url" value="$objectdb/db/tareas.odb"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="MariaDB_Unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>modelo.Tarea</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://IP_DE_UBUNTU:3306/tareas_db"/>
            <property name="javax.persistence.jdbc.user" value="luis"/>
            <property name="javax.persistence.jdbc.password" value="password123"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
    
</persistence>